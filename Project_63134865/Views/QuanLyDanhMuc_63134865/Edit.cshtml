@model Project_63134865.Models.DanhMuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutQuanLy_63134865.cshtml";
}

<h2 style="color: #0094ff ; font-size: 30px; font:bold; ">Chỉnh sửa danh mục</h2>

@using (Html.BeginForm("Edit", "QuanLyDanhMuc_63134865", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDM)

        <div class="form-group">
            @Html.LabelFor(model => model.TenDM, "Tên danh mục", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhDM, "Hình ảnh danh mục", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="text-success">
                    @ViewBag.Create
                </div>
                <input type="file" id="file" name="file" />
                <div class="text-danger">@ViewBag.HinhAnh</div>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-info">Quay lại</a>
</div>
