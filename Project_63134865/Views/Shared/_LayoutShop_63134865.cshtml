<body id="style-6">
    <div class="header">
        <div class="container">
            <div class="flex-dangNhap">
                <div class="logo">
                    <h1 class="fs-1"><a href="@Url.Action("TrangChu_63134865", "Shop_63134865")">SPORT<span class="fw-bold" style="color: #039445 !important;">The Best</span></a></h1>
                </div>
                <div class="head-t">
                    <ul class="card fw-bold">
                        @if (Session["Email"] != null)
                        {
                            <li><a href=""><i class="fa fa-user" aria-hidden="true"></i>Xin chào @Session["fullName"]</a></li>
                            <li><a href="@Url.Action("DangXuat_63134865", "Shop_63134865")"><i class="fa fa-sign-out" aria-hidden="true"></i>Đăng Xuất</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("DangNhap_63134865", "Shop_63134865")"><i class="fa fa-user" aria-hidden="true"></i>Đăng nhập</a></li>
                            <li><a href="@Url.Action("DangKy_63134865", "Shop_63134865")"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng ký</a></li>
                        }

                    </ul>
                </div>
            </div>
            <div class="nav-top khoancachnavmenu ">
                <nav class="navbar navbar-default">
                    <div class="">
                        <button type="button" class="navbar-toggle collapsed navbar-toggle1 " data-toggle="collapse" data-target="#bs-megadropdown-tabs">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
                        <ul class="nav navbar-nav ">
                            <li class=" "><a href="@Url.Action("TrangChu_63134865", "Shop_63134865")" class="hyper "><span>Trang chủ</span></a></li>
                            @{
                                Project_63134865.Models.Project_63134865Entities db = new Project_63134865.Models.Project_63134865Entities();
                                foreach (var itemCate in db.DanhMucs)
                                {
                                    <li class="dropdown ">
                                        <a href="#" class="dropdown-toggle  hyper" data-toggle="dropdown"><span>@itemCate.TenDM<b class="caret"></b></span></a>
                                        <ul class="dropdown-menu">
                                            <div class="col-sm-12">
                                                <ul class="multi-column-dropdown">
                                                    @foreach (var itemPt in db.LoaiSanPhams.Where(c => c.MaDM == itemCate.MaDM))
                                                    {
                                                        <li><a href="@Url.Action("SanPhamTheoLSP_63134865", "Shop_63134865", new { id = itemPt.MaLSP, page = 1 })"><i class="fa fa-angle-right" aria-hidden="true"></i>@itemPt.TenLSP</a></li>
                                                    }
                                                </ul>
                                            </div>
                                            <div class="col-sm-12">

                                            </div>
                                        </ul>
                                    </li>
                                }
                            }
                            <li class="dropdown ">
                                <a href="#" class="dropdown-toggle  hyper" data-toggle="dropdown"><span>Hãng sản xuất<b class="caret"></b></span></a>
                                <ul class="dropdown-menu">
                                    <div class="col-sm-12">
                                        <ul class="multi-column-dropdown">
                                            @foreach (var itemPdc in db.HangSanXuats)
                                            {
                                                <li><a href="@Url.Action("SanPhamTheoHSX_63134865", "Shop_63134865", new { id = itemPdc.MaHSX, page = 1 })"><img src="@itemPdc.AnhHSX" width="20" height="20" /> @itemPdc.TenHSX</a></li>
                                            }
                                        </ul>
                                    </div>
                                </ul>
                            </li>

                        </ul>
                    </div>
                </nav>
                <div class="cart">
                    @{
                        List<Project_63134865.Models.CartItem_63134865> gio = Session["giohang"] as List<Project_63134865.Models.CartItem_63134865>;
                        if (gio == null || gio.Count == 0)
                        {
                            <a href="@Url.Action("GioHang_63134865","Shop_63134865")"><span class="fa fa-shopping-cart my-cart-icon"><span class="badge badge-notify my-cart-badge ">0</span></span></a>
                        }
                        else
                        {
                            <a href="@Url.Action("GioHang_63134865","Shop_63134865")"><span class="fa fa-shopping-cart my-cart-icon"><span class="badge badge-notify my-cart-badge">@gio.Count</span></span></a>
                        }
                    }
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    @RenderBody()


    <div class="footer">
        <div class="container-fluid px-0">
            <div class="col-md-6 footer-grid">
                <h3>Giới thiệu</h3>
                <p style="color: #0094ff;">
                    TheBest-Sport là một cửa hàng đồ thể thao uy tín và đa dạng về sản phẩm. Chúng tôi tự hào là địa chỉ tin cậy cho những người yêu thể thao, từ người chơi chuyên nghiệp đến những người mới bắt đầu. 🏃‍♂️🏋️‍♀️🎾
                </p>
            </div>
            <div class="col-md-2 footer-grid ">
                <h3>Menu</h3>
