@model List<Project_63134865.Models.CartItem_63134865>
@{
    ViewBag.Title = "Thanh toán đơn hàng";
    Layout = "~/Views/Shared/_LayoutShop_63134865.cshtml";
}
<div class="container">
    @if (Model == null || Model.Count == 0)
    {
        <div class="spec ">
            <h3 style=" color: #4099ff !important; ">Thanh toán</h3>
            <div class="ser-t">
                <b></b>
            </div>
        </div>
        <p class="text-black-50 text-center" style="font-size:25px;">
            Giỏ hàng của bạn trống!
        </p>
    }
    else
    {
        <div class="spec ">
            <h3 style=" color: #4099ff !important; ">Thanh toán</h3>
            <div class="ser-t">
                <b></b>
            </div>
        </div>
        <div class="row">
            <div id="center_column" class="center_column">
                <div class="row">
                    <div id="left_column" class="column col-sm-12 col-md-12">
                        <form class="form-horizontal" action="/Shop_63134865/Gui_63134865" method="post">

                            <div class="">
                                <h3 class="fw-bold  " style=" color: #4099ff !important; ">Thông tin liên hệ</h3>
                                <div class="form-group ">
                                    <label class="col-lg-4 control-label fw-bold">Họ và tên *</label>
                                    <div class="col-lg-8">
                                        <input type="text" required name="fullname" class="form-control input-sm field " style="width: 300px; border: 1px solid #4099ff" value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 control-label fw-bold">Email</label>
                                    <div class="col-lg-8">
                                        <input type="email" required placeholder="Không bắt buộc" class="form-control input-sm field" name="email" style="width: 300px; border: 1px solid #4099ff" value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 control-label fw-bold">Số điện thoại *</label>
                                    <div class="col-lg-8">
                                        <input type="text" required class="form-control input-sm field" id="phone" name="phone" style="width: 300px; border: 1px solid #4099ff" value="">
                                    </div>
                                </div>
                                <h3 class="fw-bold" style=" color: #4099ff !important;">Địa chỉ giao hàng</h3>
                                <div class="form-group">
                                    <label class="col-lg-4 control-label fw-bold">Địa chỉ</label>
                                    <div class="col-lg-8">
                                        <textarea required class="form-control input-sm field" placeholder="..." name="address" rows="5" style="height: 50px; border: 1px solid #4099ff"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-4 control-label fw-bold">Ghi chú</label>
                                    <div class="col-lg-8">
                                        <textarea required class="form-control input-sm field" placeholder="..." name="note" rows="5" style="height: 50px; border: 1px solid #4099ff"></textarea>
                                    </div>
                                </div>

                            </div>


                            <div class="detail_ct" style="height:auto; min-height:inherit;">
                                <h3 class="fw-bold" style=" color: #4099ff !important; margin-top:40px">Chi tiết đơn hàng </h3>
                                <table class="table" style="background:#FFF; font-size:18px; margin-top: 20px; border:1px solid #4099ff; ">
                                    <thead>
                                        <tr>
                                            <th>Hình</th>
                                            <th>Sản phẩm</th>
                                            <th>Số lượng</th>
                                            <th>Đơn giá</th>
                                            <th>Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int total = 0;}
                                        @foreach (var item in Model)
                                        {
                                            <tr style="border-top:1px solid #4099ff;">
                                                <td>
                                                    <img src="@item.Hinh" width="50">
                                                </td>
                                                <td>
                                                    <strong>
                                                        @item.TenSanPham
                                                    </strong>
                                                </td>
                                                <td style="font:bold">@item.SoLuong</td>
                                                <td style="font:bold">@Int32.Parse(item.DonGia).ToString("#,##0") VNĐ</td>
                                                <td style="font:bold">@item.ThanhTien.ToString("#,##0") VNĐ</td>
                                            </tr>
                                            total += item.ThanhTien;
                                        }
                                    </tbody>
                                </table>
                                <fieldset>
                                    <h3 style=" color: #4099ff !important; margin-top:40px">Tổng</h3>
                                    <table class="table" style="background: #FFF; font-size: 20px; margin-top: 20px; border: 1px solid #4099ff;">
                                        <tbody>
                                            <tr style="display:flex; align-items:center; justify-content:center;">
                                                <td align="right" style="font:bold;">Tổng tiền:</td>
                                                <td style=" color: #ff0000 !important; font-size: 27px;" align="left">@total.ToString("#,##0") VNĐ</td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="2">
                                                    <input type="submit" style="width: 100%; background-color: #039445 !important; " name="submit" class="btn btn-primary" value="Gửi đơn hàng">
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </fieldset>
                            </div>
                            <div class="clr"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>